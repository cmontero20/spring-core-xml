<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- Basketball -->
    <!-- Definim la dependencia -->
    <bean id="myBasketGameStats"
          class="cat.ilg.springdemo.BasketballGameStatsService">
    </bean>

    <bean id="myBasketCoach"
          class="cat.ilg.springdemo.BasketballCoach"
            init-method="doMyStartupStuff"
            destroy-method="doMyCleanupStuff">
        <!-- Set the constructor injection -->
        <constructor-arg ref="myBasketGameStats"/>
    </bean>


</beans>